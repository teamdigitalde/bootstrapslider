<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:bootstrapslider/Resources/Private/Language/locallang_be.xml:flexforms_tab.settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.options.items>
                        <TCEforms>
                            <label>Anzahl der aktiven Items</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">1 Item</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">2 Items</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">3 Items</numIndex>
                                        <numIndex index="1">3</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">4 Items</numIndex>
                                        <numIndex index="1">4</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">5 Items</numIndex>
                                        <numIndex index="1">5</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">6 Items</numIndex>
                                        <numIndex index="1">6</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.options.items>
                    <settings.options.uebergang>
                        <TCEforms>
                            <label>Übergang</label>
                            <displayCond>FIELD:settings.options.items:>=:1</displayCond>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Normal Slide</numIndex>
                                        <numIndex index="1">slide</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Fade</numIndex>
                                        <numIndex index="1">slide carousel-fade</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.options.uebergang>
                    <settings.options.autoplay>
                        <TCEforms>
                            <label>Autoplay deaktivieren</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.options.autoplay>
                    <settings.options.speed>
                        <TCEforms>
                            <label>Slidegeschwindigkeit (in ms)</label>
                            <displayCond>FIELD:settings.options.autoplay:=:0</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <eval>trim</eval>
                                <placeholder>in ms (wenn leer, dann slidet er alle 5000ms)</placeholder>
                            </config>
                        </TCEforms>
                    </settings.options.speed>
                    <settings.options.showtitle>
                        <TCEforms>
                            <label>Titel ausblenden</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.options.showtitle>
                    <settings.options.showbodytext>
                        <TCEforms>
                            <label>Beschreibung ausblenden</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.options.showbodytext>
                    <settings.options.showpagination>
                        <TCEforms>
                            <label>Pagination ausblenden</label>
                            <displayCond>FIELD:settings.options.items:>=:2</displayCond>
                            <onChange>reload</onChange>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.options.showpagination>
                    <settings.options.paginationType>
                        <TCEforms>
                            <label>Paginationtyp</label>
                            <displayCond>FIELD:settings.options.showpagination:=:0</displayCond>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Rechtecke</numIndex>
                                        <numIndex index="1">rechteck</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Kreise (gefüllt)</numIndex>
                                        <numIndex index="1">kreis_full</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Kreise (umrandet)</numIndex>
                                        <numIndex index="1">kreis_border</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.options.paginationType>
                    <settings.options.shownavigation>
                        <TCEforms>
                            <label>Navigation (Pfeile links und rechts)</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.options.shownavigation>
                    <!-- startingpoint -->
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
